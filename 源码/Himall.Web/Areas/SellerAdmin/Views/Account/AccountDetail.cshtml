@using Himall.Core;
@model Himall.Model.AccountInfo
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datetimepicker.min.css">
<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Scripts/jquery.himallLinkage.nocreate.js"></script>
<script src="~/Scripts/jquery.placeholder.min.js"></script>
<script src="~/Scripts/bootstrap.autocomplete.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.zh-CN.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/accountDetail.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>结算详情</strong>
        <li class="active"><a>Details</a></li>
        <em class="primary-btn">
            <span class="glyphicon glyphicon-question-sign"></span>
            <div class="primary">
                <h3>温馨提示：</h3>
                <span>*</span><p></p>
            </div>
        </em>
    </ul>
    <div class="search-box" id="search-box">
        <form class="custom-inline" role="form">
            <div class="form-group">
                <label class="label-inline" for="">Type</label>
                <select class="form-control input-ssm" id="selEnumOrderType">
                    <option selected="selected" value="1">order list</option>
                    <option value="0">Refund/Return list</option>
                    <option value="2">Marketing service fee list</option>
                </select>
            </div>
            <div class="form-group">
                <label class="label-inline" for="">Start date</label>
                <input id="inputStartDate" class="form-control input-ssm start_datetime" type="text" >
            </div>
            <div class="form-group">
                <label class="label-inline" for="">End date</label>
                <input id="inputEndDate" class="form-control input-ssm end_datetime" type="text" >
            </div>


            <div class="submit"><button type="button" class="btn btn-warning btn-ssm" id="searchButton" onclick="search()">Search</button></div>
        </form>
    </div>
    <h3 class="table-hd">@Model.ShopName<span class="total-account">This period should settle <b>$@Model.PeriodSettlement</b> (@Model.StartDate - @Model.EndDate)</span></h3>
    <table id="ListOrder" class="table table-bordered"></table>
    <table id="ListReturnOrder" class="table table-bordered"></table>
    <table id="ListAgreement" class="table table-bordered"></table>
</div>

<script type="text/javascript">
    var accountId = "@Model.Id";

</script>