@model IEnumerable<Himall.Core.Plugins.IExpress>

<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>Order</strong>
        <li><a href="./management">All orders</a></li>
        <li class="active"><a>Batch printing express list(@ViewBag.OrdersCount)</a></li><!--数字为已选择订单数量-->
    </ul>
    <h3 class="table-hd">寄件人信息</h3>
    <form class="form-horizontal mt20">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-4">
                <input id="senderName" type="text" class="form-control input-sm" value="@ViewBag.Name" />
            </div>
            <div class="col-sm-3">
                <!--<span class="help-default cor-red">No more than 10 words</span>-->
                <span class="field-validation-valid"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Area:</label>
            <div class="col-sm-7">
                <select id="senderAddressProvince" class="form-control input-sm select-sort"></select>
                <select id="senderAddressCity" class="form-control input-sm select-sort"></select>
                <select id="senderAddressDistrict" class="form-control input-sm select-sort"></select>
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Address:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control input-sm" id="address" value="@ViewBag.Address" />
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Tel:</label>
            <div class="col-sm-4">
                <input id="phone" type="text" class="form-control input-sm" value="@ViewBag.Tel" />
            </div>
            <div class="col-sm-3">
                <span class="help-default cor-red" style="display:none">Please enter the correct telephone number</span>
                <span class="field-validation-valid"></span>
            </div>
        </div>
    </form>

    <h3 class="table-hd">Express information</h3>
    <form class="form-horizontal mt20">
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Select express:</label>
            <div class="col-sm-4">
                <ul class="express-choose clearfix">
                    @*class="active"*@
                    @foreach (var express in Model)
                    {
                        <li name="@express.Name" title="@express.DisplayName" expresscompany @(express.Elements == null || express.Elements.Count() == 0 ? "notSet=\"true\"" : "")><img src="@express.Logo" style="width:86px;height:24px" /><b class="on-choose"></b></li>
                    }
                </ul>
                <a class="more-express">Show more</a>
            </div>
        </div>
        <div class="form-group">
            <label for="" class="col-sm-2 control-label">Tracking number:</label>
            <div class="col-sm-4">
                <input type="text" id="startNo" class="form-control input-sm" />
            </div>
            <div class="col-sm-5">
                <span class="help-default">Batch printing,enter the first tracking number and others will automatically increase.</span>
                <span class="field-validation-valid"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="button" class="btn btn-primary" id="print-express">Confirm printing</button>
            </div>
        </div>
        <input type="hidden" id="regionId" value="@ViewBag.RegionId" />
        <input type="hidden" id="fullRegionPath" value="@ViewBag.FullRegionPath" />
    </form>
</div>
