
@{
    ViewBag.Title = "Show";
}
@model Himall.Model.ShopBrandApplysInfo

<style type="text/css">
    #id_band img {
        width: 100px;
        height: 100px;
    }
</style>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>Brands</strong>
        <li><a href="./Management">Application list</a></li>
        <li class="active"><a>Add application</a></li>
        <em class="primary-btn">
            <span class="glyphicon glyphicon-question-sign"></span>
            <div class="primary">
                <h3>Tips</h3>
                <span>*</span><p>商家可申请品牌，待管理员审核后商家才可正常使用</p>
            </div>
        </em>
    </ul>
	<div id="id_band">
		<form role="form" class="form-horizontal" id="brandform">
				<div class="form-group">
					<label class="col-sm-2 control-label">Brand name:</label>
					<div class="col-sm-6 form-control-static">@Model.BrandName</div>
					<div class="col-sm-4"></div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Whether exists</label>
					<div class="col-sm-6 form-control-static">
						@(Model.ApplyMode == 1 ? "yes" : "no")
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Brand Logo:</label>
					<div class="col-sm-6 form-control-static"><img src="@Model.Logo" /></div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label" for="">Brief introduction:</label>
					<div class="col-sm-10 form-control-static">
						@Model.Description
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label">Authorization certificate:</label>
					<div class="col-sm-6 form-control-static">
						@{
							string[] pics = Model.AuthCertificate.Split(',');
							for (int i = 0; i < pics.Length; i++)
							{
								<img src="@pics[i]" />
							}
						}
	
					</div>
				</div>
				<div class="form-group">
					<label class="col-sm-2 control-label" for="">Note:</label>
					<div class="col-sm-10 form-control-static">@Model.Remark</div>
				</div>
		</form>
	</div>
</div>
