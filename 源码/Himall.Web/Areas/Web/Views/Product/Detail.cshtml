                $('.wrap-input .text').each(function (i, e) {
                    if (parseInt($(e).val()) > 0) {
                        totalnum += parseInt($(e).val());
                    }
                });
                if (totalnum == 0) {
                    totalnum = 1;
                }
                $.ajax({
                    type: 'post',
                    url: '../CalceFreight',
                    data: { cityId: cityid, pId: "@Model.Product.Id", count: totalnum },
                    dataType: "json",
                    async: false,
                    success: function (data) {
