@{
    Layout = "~/Areas/Web/Views/Shared/_UserCenter.cshtml";
    ViewBag.Title = "提现";
    String[] LS = @ViewBag.List;
}
<link href="~/Areas/Web/Content/register.css" rel="stylesheet" />
