                        checkScanState();
                    }
                    else {
                        $.dialog.succeedTips('请选择提现账号！');
                    }
                    // $.dialog.succeedTips('HERE！');
                }
            });

        });
        $('#submitApply').bind('click', function () {
            var reg = /^[0-9]+([.]{1}[0-9]{1,2})?$/;

            if (!reg.test($('#inputMoney').val())) {
                $.dialog.alert("提现金额不能为非数字字符");
                return;
            }
