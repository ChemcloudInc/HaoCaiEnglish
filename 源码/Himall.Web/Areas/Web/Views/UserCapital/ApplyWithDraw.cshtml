<div class="box1 lh24" style="display:none;" id="step2" name="stepname">
    <div class="title bot-border">
        <h3 class="title_txt cur">选择账户</h3>
    </div>
    <div class="border-box">
        <div class="user-set userset-lcol">
            <div class="form">
                <div class="item">
                    <span class="label">我的账户：</span>
                    <div class="fl">
                        <select id="account" class="sele" style="width:200px">
                            @for (int i = 0; i < @ViewBag.Num; i++)
                            {
                                <option>@LS[i]</option>
                            }


                        </select>
                    </div>
                    <div class="f1"><span class="help-default">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/WithDraw/AddWithDraw">新增账户</a></span></div>
                    
                </div>
                
                <div class="item">
                    <span class="label">&nbsp;</span>
                    <div class="fl">
                        <a id="submitAccount" class="btn-5">提交</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="box1 lh24" style="display:none;" id="step3" name="stepname">
    <div class="border-box">
        <div class="user-set userset-lcol">
            <div class="form">
                <div class="item">
                    <span class="label">可提现金额：</span>
                    <div class="fl">
                        <span>@ViewBag.ApplyWithMoney</span>
                    </div>
                </div>
                <div class="item">
                    <span class="label">提现方式：</span>
                    <div class="fl">
                        <span id="withdrawtype"></span>
                    </div>
                </div>
                <div class="item">
                    <span class="label">收款账号：</span>
                    <div class="fl">
                        <span id="myaccount"></span>
                    </div>
                </div>
                <div class="item">
                    <span class="label">收款人：</span>
                    <div class="fl">
                        <span id="nikename"></span>
                    </div>
                </div>
                <div class="item">
                    <span class="label">提现金额：</span>
                    <div class="fl">
                        <input value="" id="inputMoney" name="userVo.realName" maxlength="20" class="itxt fl">
                    </div>
                </div>
                <div class="item">
                    <span class="label">支付密码：</span>
                    <div class="fl">
                        <input type="password" value="" id="payPwd" name="userVo.realName" maxlength="20" class="itxt fl">
                    </div>
                </div>
                <div class="item">
                    <span class="label">&nbsp;</span>
                    <div class="fl">
                        <a id="submitApply" class="btn-5" href="javascript:;">提交</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="box1 lh24" style="display:none;" id="step4" name="stepname">
