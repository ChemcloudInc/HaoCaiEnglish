                        loading.close();
                        if (data1.success) {
                            $.dialog.succeedTips('设置成功！');
                            JumpStep(2);
                            checkScanState();
                        }
                    }
                });
            }
        });
        $('#submitAccount').bind('click', function () {
            var acc = $('#account').val();
            //     $.dialog.succeedTips(acc);
            $.ajax({
                type: 'post',
                url: '@Url.Action("SelectAccount")',
                data: { "account": acc },
                dataType: "json",
