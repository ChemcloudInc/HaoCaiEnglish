<div class="warp">
	<ul class="site-promise cl">
		<li class="fore1">
			<b></b>
			<h3>Real Guarantee</h3>
			<p>所有产品都是原装正品</p>
		</li>
		<li class="fore2">
			<b></b>
			<h3>7*24 Service</h3>
			<p>全年全天侯服务</p>
		</li>
		<li class="fore3">
			<b></b>
			<h3>七天无理由退换货</h3>
			<p>换货政策详见三包政策</p>
		</li>
		<li class="fore4">
			<b></b>
			<h3>全场免运费</h3>
			<p>大件物品除外</p>
		</li>
		<li class="fore5">
			<b></b>
			<h3>帮助中心</h3>
			<p>您的购物指南</p>
		</li>
	</ul>
    <div class="footer-service cl">
        @{
            int i = 1;
            var pageFootService = (IEnumerable<Himall.Web.Areas.Web.Models.PageFootServiceModel>)ViewBag.PageFootService;
        }
        @if (pageFootService != null)
        {
            foreach (var t in pageFootService)
            {
                if (t != null)
                {
                    <dl class="fore@(i++)">
                        <dt><strong>@t.CateogryName</strong></dt>
                        <dd>
                            @{var articles = (IEnumerable<Himall.Model.ArticleInfo>)t.Articles;}
                            @if (articles != null)
                            {
                                foreach (var article in t.Articles)
                                {
                                    if (null != article)
                                    {
                                        <p><a href="@Url.Action("Details", "Article", new { id = article.Id }) " target="_blank" rel="nofollow">@article.Title</a></p>
                                    }
                                }
                            }
                        </dd>
                    </dl>
                }
            }
        }
		<div class="qrcode">
			<img  class="lazyload" src="@ViewBag.QRCode"/>
			<h3>扫码关注</h3> 
			<p>@(ViewBag.SiteName)官方微信</p>
		</div>
    </div>
</div>

<div class="copyright">
	<div class="warp">
		@{string pageFoot = ViewBag.PageFoot==null?string.Empty: ViewBag.PageFoot as string;}
		@Html.Raw(pageFoot)
	</div>
</div>
</div>
@{
    string FootScript = ViewBag.FlowScript;
}

<div style="display:none;">
@Html.Raw(FootScript)
</div>

