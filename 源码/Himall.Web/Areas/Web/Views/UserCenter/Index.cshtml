<!DOCTYPE html>
@{
    Layout = null;
}
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="renderer" content="webkit|ie-stand">
    <meta name="viewport" content="width=device-width" />
    <title>My Account</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <style type="text/css">
	body{ font: 12px/1.5 Arial, 'microsoft yahei', 'SimSun';background:#f2f2f2;}
    .aside { padding-bottom:100px; }
	.logo{ background:none;}
	.aside,.content {top:110px; }
	.aside ul{ margin:0;}
	.aside ul li{ margin:0;}
	.aside li{ height:32px; line-height:32px;}
	.aside li.li-lg{ font-size:14px;color:#666;border-top:1px solid #f4f5fa; border-bottom:1px solid #f4f5fa; line-height:40px; height:40px; background:url(/images/usecenter_l.png) no-repeat;}
	.aside li.li-lg.user-c{ background:none;}
	.aside li.li-lg.user-c a{ background:url(/images/usecenter_l.png) no-repeat 20px 13px;}
	.aside li.li-lg.user-c.current a{ background-color:#3480eb; background-position:20px -197px;}
	.aside li.user-o{ background-position:20px -18px;}
	.aside li.user-m{ background-position:20px -48px;}
	.aside li.user-a{ background-position:20px -78px}
	.aside li.user-r{ background-position:20px -139px;}
	.aside li.user-i{ background-position:20px -169px;}
	.aside li.user-p{ background-position:20px -108px;}
	.aside li.li-lg:first-child{ border:0;}
	.aside li.li-lg a{ color:#000;}
	.aside li.li-lg a:hover{ color:#3480eb}
	.aside li.li-lg.current a{ color:#fff;}
	.user-header{ height:80px; border-bottom:2px solid #3480eb; background:#fff;}
	.search-bar { height: 60px; padding-top:10px;  width: 1190px; margin: 0 auto;}
	.logo { float: left; width: 330px; }
	.logo img{  display: inline-block;margin-top: 10px;}
	.search { float: right; padding-right:280px; margin-top:10px; }
	.search-form { height: 36px; margin-bottom: 3px; position: relative;}
	.search-form input { float: left; outline:0;}
	.search-form .text { width: 400px; height: 36px; padding: 5px; background-color: #fff; line-height: 22px; color: rgb(51, 51, 51); font-size: 14px;border: 2px solid #4b8eec;border-right: 0;padding-left: 90px;}
	.search-form .button { background: #3480eb; width: 78px; font-size: 16px;  color: #fff; cursor: pointer;   height: 36px; border: none 0 ;}
    .search-form ul{ list-style:none; position:absolute; top:1px; left:1px; background-color:#fff;  width: 80px;line-height: 32px; font-size: 14px; box-shadow:0 2px 4px #ddd; border:1px solid #ddd; z-index:2; display:none;}
    .search-form ul li{ cursor:pointer; text-indent:12px;}
    .search-form ul li:hover{ color: #3480eb;}
    .search-form label{ position:absolute; left:2px; width:80px; text-indent:12px; font-size:14px; line-height:36px; cursor:pointer; color:#666; font-weight:normal;}
    .search-form label:after{ content:''; position:absolute; top:16px; right:0; border-top:5px solid #3480eb; border-left:5px dashed transparent; border-right:5px dashed transparent; font-size:0; width:0; height:0;}

	</style>

    <link href="~/Areas/Web/Content/artdilog.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/CommonJS.js"></script>
</head>


<body>
    @{Html.RenderAction("TopInfo", "ProductPartial");}
	
	<div class="user-header">
		<div class="search-bar clearfix">
			<div class="logo"><a href="/"><img src="@ViewBag.Logo" height="40" alt="Himall" /></a></div>
			<div class="search">
				<div class="search-form">
                    <ul>
                        <li>Products</li>
                        <li>Shops</li>
                    </ul>
                    <label>Products</label>
					<input type="text" id="searchBox" class="text" name="" value="" placeholder="@ViewBag.Keyword" />
					<input type="button" id="searchBtn" class="button" value="Search" />
				</div>
			</div>
		</div>
	</div>

    <div class="aside">
		<ul class="aside-list">
			<li class="current li-lg user-c"><a href="/UserCenter/home" target="iframe">My Account</a></li>
			<li class="li-lg user-o">Orders</li>
			<li><a href="/UserOrder" target="iframe">Orders</a></li>
			<li><a href="/userConsultation" target="iframe">Consults</a></li>
			<li><a href="/userComment" target="iframe">Reviews</a></li>
			<li class="li-lg user-m">Capital Center</li>
			<li><a href="/userCoupon/index" target="iframe">My Coupons</a></li>
			<li><a href="/userIntegral/Index" target="iframe">My points</a></li>
            <li><a href="/withdraw/Index" target="iframe">With Draw Type</a></li>
            <li><a href="/UserCapital/Index" target="iframe">Capital</a></li>
			<li class="li-lg user-a">My Wishlist</li>
			<li><a href="/productConcern/index" target="iframe">Wishlist Products</a></li>
			<li><a href="/shopConcern/Index" target="iframe">Wishlist Shops</a></li>   
			<li class="li-lg user-r">After-Sales Service</li>
			<li><a href="@Url.Action("List", "OrderRefund", new { Area = "Web", showtype =2})" target="iframe">Refunds</a></li>
			<li><a href="/OrderComplaint" target="iframe">Complaints</a></li>
			<li class="li-lg user-i">Accounts</li>
			<li><a href="/UserAddress" target="iframe">Addresses</a></li>
			<li><a href="/UserInfo/Index" target="iframe">Customer Info</a></li>
			<li><a href="/userCenter/AccountSafety" target="iframe">Account Security</a></li>
			
		</ul>
		<!--<a class="btn-change-link" href="@Url.Action("index", "home", new { area = "SellerAdmin" })"><i class="glyphicon glyphicon-shopping-cart"></i>我要卖</a>-->
	</div>
	<div class="content">
		<iframe id="iframe" name="iframe" frameborder="0" scrolling="auto" src="/UserCenter/home"></iframe>
	</div>
    <script src="~/Scripts/jquery.cookie.js"></script>
	<script src="~/Scripts/jquery.nicescroll.min.js"></script>
	<script type="text/javascript">
        $(function () {
            //下拉菜单
            $('.top .dropdown').hover(function () {
                $(this).toggleClass('hover');
            });

            //搜索切换
            $('.search-form label').click(function () {
                $(this).siblings('ul').show();
            });
            $('.search-form ul li').click(function () {
                $(this).parent().hide().siblings('label').text($(this).text());
            });
			
			//iframe高度自适应
			$('.content,.aside').height($(window).height() - 110);
			$(window).resize(function () {
				$('.content,.aside').height($(window).height() - 110);
			});
			
			$('.aside-list li a').click(function() {
				$(this).parent().addClass('current').siblings().removeClass('current');
			});
			
			$(".aside").niceScroll({
				cursorwidth:3,
				cursorcolor:"#616161",
				cursorborder :0,
				cursorborderradius:0
			});
			//$('#searchBtn').click(function () {
			//    var keyWords = $('#searchBox').val();
			//    location.href = "/search?keywords=" + encodeURIComponent(keyWords ? keyWords : $('#searchBox').attr('placeholder'))
			//});

			$('#searchBtn').click(function () {
			    var keyWords = $.trim($('#searchBox').val());

			    var selected = $(".search .search-form label").html();
			    if (selected == "Shops") {
			        if (keyWords == '') {
			            return;
			        }
			        location.href = "/shopsearch?keywords=" + encodeURIComponent(keyWords ? keyWords : $('#searchBox').attr('placeholder'))
			    }
			    else {
			        location.href = "/search?keywords=" + encodeURIComponent(keyWords ? keyWords : $('#searchBox').attr('placeholder'))
			    }

			});

			$("#searchBox").keydown(function (e) {
			    if (e.keyCode == 13) {
			        var keyWords = $('#searchBox').val();
			        location.href = "/search?keywords=" + encodeURIComponent(keyWords ? keyWords : $('#searchBox').attr('placeholder'))
			    }
			});
        });


        function GetQueryString(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
            var r = window.location.search.substr(1).match(reg);
            if (r != null) return unescape(r[2]); return null;
        }

        $(function () {
            var myurl = GetQueryString("url");

            if (myurl != null && myurl.toString().length > 1) {
                var tar = GetQueryString("tar").toLowerCase();
                $(".aside-list li a").each(
                    function (index, item) {
                        if ($(item).attr("href").toLowerCase().indexOf(tar) >= 0) {
                            $(item).parent().click();
                        }
                    }
                );
                window.iframe.location.href = myurl;
                //$("#iframe").attr("src", myurl);

            } else {
                $(".nav li").first().click();
            }
        });
    </script>



</body>
</html>
