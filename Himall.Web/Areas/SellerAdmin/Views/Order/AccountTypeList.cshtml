<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.zh-CN.js"></script>

<script src="~/Scripts/LodopFuncs.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/orderAccountType.js"></script>
<script type="text/javascript">
    $(function () {
        $(".start_datetime").datetimepicker({
            language: 'zh-CN',
            format: 'yyyy-mm-dd',
            autoclose: true,
            weekStart: 1,
            minView: 2
        });
        $(".end_datetime").datetimepicker({
            language: 'zh-CN',
            format: 'yyyy-mm-dd',
            autoclose: true,
            weekStart: 1,
            minView: 2
        });
        $(".start_datetime").click(function () {
            $('.end_datetime').datetimepicker('show');
        });
        $(".end_datetime").click(function () {
            $('.start_datetime').datetimepicker('show');
        });
        $('.start_datetime').on('changeDate', function () {
            if ($(".end_datetime").val()) {
                if ($(".start_datetime").val() > $(".end_datetime").val()) {
                    $('.end_datetime').val($(".start_datetime").val());
                }
            }

            $('.end_datetime').datetimepicker('setStartDate', $(".start_datetime").val());
        });


    });
</script>
<style type="text/css">
    i.refundico {
        display: inline-block;
        width: 16px;
        overflow: hidden;
        height: 17px;
        background: url("/Images/iconfont-tui.png") no-repeat center center;
        text-indent: -999px;
        margin-right: 3px;
    }
</style>

<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>订单结算状态</strong>
        <li value="0" type="statusTab"><a>所有付款订单</a></li>
        <li value="1" type="statusTab"><a>未结算</a></li>
        <li value="2" type="statusTab"><a>待结算</a></li>
        <li value="3" type="statusTab"><a>已结算</a></li>
    
    </ul>

    <div class="search-box" id="search-box">
        <form class="custom-inline" role="form">
            <div class="form-group">
                <label class="label-inline" for="">开始日期</label>
                <input id="inputStartDate" class="form-control input-ssm start_datetime" type="text">
            </div>
            <div class="form-group">
                <label class="label-inline" for="">结束日期</label>
                <input id="inputEndDate" class="form-control input-ssm end_datetime" type="text">
            </div>
            <div class="form-group">
                <label class="label-inline" for="">订单号</label>
                <input class="form-control input-ssm" type="text" id="txtOrderId">
            </div>
            <div class="form-group">
                <label class="label-inline" for="">买家</label>
                <input class="form-control input-ssm" type="text" id="txtUserName">
            </div>
            <div class="form-group">
                <label class="label-inline" for="">订单类型</label>
                <select id="orderType" class="form-control input-ssm">
                    <option value="">全部类型</option>
                    @foreach (var item in Enum.GetValues(typeof(Himall.Core.PlatformType)))
                    {
                        switch ((Himall.Core.PlatformType)item)
                        {

                            case Himall.Core.PlatformType.Android:
                            case Himall.Core.PlatformType.Mobile:
                                break;
                            case Himall.Core.PlatformType.IOS:
                                <option value="@((int)item)">APP(IOS)订单</option>
                                break;
                            default:
                            <option value="@((int)item)">@(((Himall.Core.PlatformType)item).ToDescription())订单</option>
                                break;

                        }
                    }
                </select>
            </div>
            <div class="submit"><button type="button" class="btn btn-primary btn-sm" id="searchButton">搜 索</button></div>
        </form>
    </div>

    <table id="listAccountType" class="table"></table>
  
</div>
<script>
    $(function () {
        var val = "@Request.QueryString["status"]";
        $('.nav li').each(function () {
            if ($(this).val() == val) {
                $(this).addClass('active').siblings().removeClass('active');
            }
        });
    });
</script>
