@{
    ViewBag.Title = "商家管理员管理";
}
<script src="~/Scripts/jquery.hiMallDatagrid.js"></script>
<script src="~/Scripts/jquery.himallLinkage.nocreate.js"></script>
<script src="~/Areas/SellerAdmin/Scripts/managerManagement.js"></script>
<div class="container">
    <ul class="nav nav-tabs-custom clearfix">
        <strong>卖家帐号管理</strong>
        <li class="active"><a>子帐号</a></li>
        <li class="add-manager"><a>添加子帐号</a></li>
        <em class="primary-btn">
            <span class="glyphicon glyphicon-question-sign"></span>
            <div class="primary">
                <h3>温馨提示：</h3>
                <span>*</span><p>管理店铺子账号，可调整管理员所属的权限组</p>
            </div>
        </em>
    </ul>

    <table class="table" id="list">
        <div class="tabel-operate" id="batchOperate">
            <button type="button" class="btn btn-default btn-ssm" onclick="BatchDelete()">批量删除</button>
        </div>
    </table>
</div>
<div class="dialog-form" id="addManagerform" style="display:none">
    <div class="form-group" id="UserNameDiv">
        <label class="label-inline" for="">用户名</label>
        <label id="name-prefix"></label>
        <input class="form-control input-sm" type="text" id="UserName" name="UserName">
    </div>
    <div class="form-group">
        <label class="label-inline" for="">密码</label>
        <input class="form-control input-sm" type="password" id="PassWord" name="PassWord">
    </div>
    <div class="form-group">
        <label class="label-inline" for="">确认密码</label>
        <input class="form-control input-sm" type="password" id="confirmPassWord" name="confirmPassWord">
    </div>
    <div class="form-group">
        <label class="label-inline" for="">姓名</label>
        <input class="form-control input-sm" type="text" id="realName" name="realName">
    </div>
    <div class="form-group">
        <label class="label-inline" for="">备注</label>
        <textarea class="form-control input-sm input-half" id="reMark" name="reMark" rows="5"></textarea>
    </div>
    <div class="form-group" id="roleGroupDiv">
        <label class="label-inline" for="">权限组</label>
        <select class="form-control input-sm" id="RoleId" name="RoleId"></select>
    </div>
</div>
<script>
    var mainUserName = '@ViewBag.MainUserName';
    var userId= '@ViewBag.UserId';
</script>